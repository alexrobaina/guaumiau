rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Users can read and write their own workout sessions (subcollection)
      match /workout_sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Users can read and write their own training plans (subcollection)
      match /training_plans/{planId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Users can read and write their own progress data (subcollection)
      match /progress/{progressId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Global training plans collection (for templates and user plans)
    match /training_plans/{planId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid || resource.data.isTemplate == true);
    }

    // Custom exercises collection
    match /custom_exercises/{exerciseId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid);
    }

    // Posts collection (for social features)
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid);
    }

    // Workout progress collection (for analytics)
    match /workout_progress/{progressId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid);
    }

    // Workout sessions collection
    match /workout_sessions/{sessionId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid);
    }

    // Training sessions collection
    match /trainingSessions/{sessionId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid);
    }
  }
}